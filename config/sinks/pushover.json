{
  "id": "pushover",
  "type": "webhook",
  "name": "Pushover Webhook",
  "enabled": false,
  "config": {
    "url": "https://api.pushover.net/1/messages.json",
    "method": "POST"
  },
  "template": {
    "token": "${PUSHOVER_APP_TOKEN}",
    "user": "${PUSHOVER_USER_KEY}",
    "priority": 0,
    "format": "json"
  },
  "payloadTransforms": [
    {
      "name": "pushover-message",
      "priority": 100,
      "bodyFormat": "form",
      "contentType": "application/x-www-form-urlencoded",
      "formTemplate": {
        "token": "{{token}}",
        "user": "{{user}}",
        "title": "{{title}}",
        "message": "{{body}}",
        "priority": "{{priority}}",
        "html": "1"
      }
    }
  ],
  "allowedMetadata": [
    "token",
    "user",
    "title",
    "message",
    "priority",
    "sound",
    "url",
    "url_title"
  ],
  "metadata": {
    "description": "Send push notifications via Pushover"
  }
}