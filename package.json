{
  "name": "irc-notify",
  "version": "1.0.0",
  "description": "Highly extensible IRC Notification service.",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "docker:build": "docker build -t irc-notify .",
    "docker:run": "docker run -it --rm -v $(pwd)/logs:/logs:ro -v $(pwd)/config:/app/config:ro irc-notify",
    "config:export": "bun src/cli.ts export",
    "config:import": "bun src/cli.ts import",
    "config:merge": "bun src/cli.ts merge",
    "config:validate": "bun src/cli.ts validate",
    "dev:gen": "bun src/cli.ts gen-dev",
    "dev:cleanup": "bun src/cli.ts cleanup-dev",
    "test": "bun test",
    "format": "bunx biome check . --fix",
    "format:check": "bunx biome check ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/hycord/irc-notify.git"
  },
  "author": "hycord <hycord@hycordia.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hycord/irc-notify/issues"
  },
  "homepage": "https://github.com/hycord/irc-notify#readme",
  "dependencies": {
    "glob": "^13.0.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@biomejs/biome": "^1.8.3"
  }
}
